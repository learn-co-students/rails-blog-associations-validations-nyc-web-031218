<p id="notice"><%= notice %></p>

<p>
  <h3>Post title</h3>
  <%= @post.name %>
</p>

<p>
  <h3>Post Content:</h3>
  <%= @post.content %>
</p>

<% if !@post.tags.empty? %>
<p>
  <h3>Post Content:</h3>
  <% @post.tags.each do |tag| %>
    <%= tag.name %>
  <% end %>
</p>
<% end  %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
